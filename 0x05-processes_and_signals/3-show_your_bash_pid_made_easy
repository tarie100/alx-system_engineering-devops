#!/usr/bin/env bash
# Get the PID and process name of processes containing the word "bash" using pgrep
processes=$(pgrep -l bash)

# Display the PID and process name of the matching processes
for process in $processes; do
	proc_name = $(cat/proc/
$process/cmdline | tr '\0' ' ')
	echo "PID: $pid, Process
Name: $proc_name"
done
